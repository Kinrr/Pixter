<div class="launch-box span4 offset3 text-center">
	<h1> Add your Image </h1>	
	<br/>
	<%= simple_form_for @post do |f| %>	
		<%= f.input :title, label: 'Your Image Title please', placeholder: 'Tibbers 1v5' %>
		<br/>
		<%= f.input :description, label: 'Why is this awesome?', placeholder: 'Tibbers gets a penta' %>	
		<br/>
		<%= f.input :image, label: 'Browse for your image here' %>
		<br/>
		<%= f.submit'Upload', :class=> 'btn btn-warning btn-large' %>
		<% end %>
</div>
